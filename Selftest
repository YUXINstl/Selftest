            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }
        h1 {
            color: #2c3e50;
            margin-bottom: 10px;
            text-align: center;
        }
        p {
            color: #7f8c8d;
            margin-bottom: 20px;
            text-align: center;
        }
        .question {
            margin-bottom: 30px;
        }
        .question-text {
            font-weight: bold;
            margin-bottom: 10px;
        }
        .options {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 10px;
        }
        .option {
            border: 2px solid transparent;
            border-radius: 8px;
